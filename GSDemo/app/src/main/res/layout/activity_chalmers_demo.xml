<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChalmersDemo"
    android:textAlignment="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/cast_intro_overlay_background_color">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingEnd="-80dp"
            android:paddingStart="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/astazero"
            />

        <Button
            android:id="@+id/btn_drone_con"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="DRONE CONNECTION"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_ip_address"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="IP-Address"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_drone_state"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="DRONE STATE"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_atos_con"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="ATOS CONNECTION"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:enabled="false"
            />







    </LinearLayout>

    <TextureView
        android:id="@+id/video_preview_surface"
        android:layout_width="640dp"
        android:layout_height="360dp"
        />



</LinearLayout>