<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".ChalmersDemo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cast_intro_overlay_background_color"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="0dp"
            android:paddingEnd="-80dp"
            android:scaleType="centerInside"
            android:src="@drawable/astazero" />

        <Button
            android:id="@+id/btn_drone_con"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_light"
            android:enabled="false"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="DRONE CONNECTION"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_ip_address"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@android:color/darker_gray"
            android:enabled="false"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="IP-Address"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_drone_state"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@android:color/holo_red_light"
            android:enabled="false"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="DRONE STATE"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_atos_con"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@android:color/holo_red_light"
            android:enabled="false"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="ATOS CONNECTION"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id = '@+id/main_title_rl'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="640dp"
            android:layout_height="360dp">

            <TextureView
                android:id="@+id/video_previewer_surface"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_title_rl"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/text_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:text="GPS LEVEL: "
                android:textSize="20dp"
                android:textColor="#D40000"/>

            <TextView
                android:id="@+id/text_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingTop="30dp"
                android:text="LAT: "
                android:textSize="20dp"
                android:textColor="#D40000"/>

            <TextView
                android:id="@+id/text_lon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingTop="60dp"
                android:text="LON: "
                android:textSize="20dp"
                android:textColor="#D40000"/>

            <TextView
                android:id="@+id/text_alt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingTop="90dp"
                android:text="ALT: "
                android:textSize="20dp"
                android:textColor="#D40000"/>

            <LinearLayout
                android:id="@+id/set_autosensing_bg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="MultiTrackingEnable"
                    android:textColor="#D40000" />

                <Switch
                    android:id="@+id/set_multitracking_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">

            <Button
                android:id="@+id/clear_wps"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Clear WPS" />

            <Button
                android:id="@+id/testcircle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Test Circle" />

            <Button
                android:id="@+id/start"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Start" />

            <Button
                android:id="@+id/pauseresume"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Pause" />


            <Button
                android:id="@+id/stop"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Stop" />

            <Button
                android:id="@+id/land"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Land" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>